<Page
    x:Class="App1.Directories.MagicItemExtendedPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <local:RarityConvector x:Key="RarityConvert"/>
    </Page.Resources>
    <ScrollViewer>
        <StackPanel>
            <TextBlock FontSize="24" Margin="30" Text="{Binding Name}"/>
            <TextBlock Text="{Binding Quality, Converter= {StaticResource RarityConvert}}" Margin="30,0,0,0"/>
            <TextBlock Text="{Binding Type}" Margin="30,30,0,30"/>
            <StackPanel>
                <TextBlock Text="Особенности" FontSize="24" Margin="30" TextDecorations="Underline"/>
                <ListView x:Name="FeaturesList" ItemsSource="{Binding Features, Mode=OneTime}" SelectionMode="None" Margin="30,0,0,0" >
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:MagicItemFeautes">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontWeight="Bold" FontSize="18" Text="{x:Bind Name}" VerticalAlignment="Top">
                                </TextBlock>
                                <TextBlock FontWeight="Bold" FontSize="18" Text=":" VerticalAlignment="Top">
                                </TextBlock>
                                <TextBlock Margin="10,0,0,0" Text="{x:Bind Desctipt}" Loaded="RichTextBlock_Loaded" VerticalAlignment="Top">
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
